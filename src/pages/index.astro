---
import NavBar from "../components/NavBar.astro";
import "../global.css";
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <section
    class="bg-gradient-to-br from-[#DF7126] to-[#AC3232] p-20 text-center text-white"
  >
    <div class="m-4">
      <h1 class="text-9xl font-bold">New Bot</h1>
      <h2 class="text-2xl">A useless, open-sourced Discord bot.</h2>
    </div>
    <div class="m-4">
      <a
        href="/documentation"
        class="inline-block rounded bg-white p-5 text-lg text-black"
        >Documentation</a
      >
      <a
        href="/invite"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-block rounded bg-[#7289DA] p-5 text-lg font-bold text-white"
        >Invite me!</a
      >
    </div>
  </section>
</Layout>
