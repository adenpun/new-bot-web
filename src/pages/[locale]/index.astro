---
import SayEmulator from "../../components/SayEmulator.svelte";
import TitleSection from "../../components/TitleSection.astro";
import Layout from "../../layouts/Layout.astro";
import { getLocaleStaticPaths, t } from "../../utils/locales";
import githubLogo from "../../images/github/logo-white.png";
import githubMark from "../../images/github/mark-white.svg";

export function getStaticPaths() {
  return getLocaleStaticPaths();
}

const locale = Astro.params.locale;
---

<Layout>
  <TitleSection
    title={t("bot.name", locale)}
    description={t("bot.description", locale)}
    image="/new-bot.png"
    imageAlt="New Bot Logo"
    class="bg-gradient-to-br from-[#DF7126] to-[#AC3232]"
  >
    <div class="my-4 flex justify-center gap-5">
      <a
        href="/invite"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center rounded-lg bg-[#5865F2] p-5 text-lg font-bold text-white"
        >{t("text.invite_me", locale)}</a
      >
      <a
        href="/github"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center rounded-lg bg-[#171515] p-5 text-lg font-bold text-white"
        ><img src={githubMark} alt="GitHub Mark" class="inline-block h-7" />
        <img src={githubLogo} alt="GitHub Logo" class="inline-block h-7" /></a
      >
    </div>
  </TitleSection>
  <section class="p-10 text-center">
    <h2 class="my-3 text-3xl font-bold">{t("feature.say.title", locale)}</h2>
    <noscript
      ><div class="text-9xl">
        {t("feature.say.emulator.noscript", locale)}
      </div></noscript
    >
    <SayEmulator client:visible {locale} />
  </section>
  <section class="bg-white p-10 text-center text-black">
    <h2 class="my-3 text-3xl font-bold">
      {t("text.more_features_coming_soon", locale)}
    </h2>
  </section>
</Layout>
